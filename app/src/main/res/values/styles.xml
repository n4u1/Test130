<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeMyLight" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#4485c9</item>
        <item name="android:textColorPrimaryDisableOnly">#f44336</item>
    </style>


    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHighlight">@color/colorAccent</item>
        <item name="android:textColorLink">@color/colorPrimary</item>
        <item name="android:textColorHint">#8e9397</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#4485c9</item>
        <item name="colorControlNormal">#4485c9</item>
        <item name="colorControlActivated">#4485c9</item>
    </style>



</resources>
