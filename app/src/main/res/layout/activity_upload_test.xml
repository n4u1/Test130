<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.UploadTestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edittext_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="title" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/button_addContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="add_Content" />

        <ImageView
            android:id="@+id/imageView_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/button_upload"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="upload" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edittext_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:inputType="textMultiLine" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edittext_addItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="input_text" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/button_addItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="add_item" />


            <!--<ListView-->
                <!--android:id="@+id/lv"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->




        <android.support.v7.widget.RecyclerView

            android:id="@+id/recyclerView_uploadTest"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>


    </LinearLayout>


</ScrollView>