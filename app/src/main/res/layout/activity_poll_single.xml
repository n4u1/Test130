<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:theme="@style/TextLabel"
    tools:context=".views.PollSingleActivity">

    <include layout="@layout/mytoolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <!--제목-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#efefef" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="제   목"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pollActivity_textView_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint=""
                    android:textSize="16dp" />
            </LinearLayout>


            <!--시간-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#efefef" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="시   간"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pollActivity_textView_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint=""
                    android:textSize="16dp" />
            </LinearLayout>


            <!--투표방식-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#efefef" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="방   식"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pollActivity_textView_pollMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint=""
                    android:textSize="16dp" />
            </LinearLayout>


            <!--카테고리-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#efefef" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="분   류"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pollActivity_textView_contentType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint=""
                    android:textSize="16dp" />
            </LinearLayout>


            <!--내용-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#efefef" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="내   용"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/pollActivity_textView_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint=""
                android:paddingLeft="18dp"
                android:textSize="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#efefef" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/pollActivity_imageView_userAddContent_1"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />
                <android.support.v7.widget.AppCompatImageView
                    android:layout_alignBottom="@id/pollActivity_imageView_userAddContent_1"
                    android:id="@+id/pollActivity_imageView_userAddContent_check_1"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:visibility="gone"/>


                <android.support.v7.widget.AppCompatImageView
                    android:layout_below="@id/pollActivity_imageView_userAddContent_1"
                    android:id="@+id/pollActivity_imageView_userAddContent_2"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />
                <android.support.v7.widget.AppCompatImageView
                    android:layout_alignBottom="@id/pollActivity_imageView_userAddContent_2"
                    android:id="@+id/pollActivity_imageView_userAddContent_check_2"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:visibility="gone"/>


                <android.support.v7.widget.AppCompatImageView
                    android:layout_below="@id/pollActivity_imageView_userAddContent_2"
                    android:id="@+id/pollActivity_imageView_userAddContent_3"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />
                <android.support.v7.widget.AppCompatImageView
                    android:layout_alignBottom="@id/pollActivity_imageView_userAddContent_3"
                    android:id="@+id/pollActivity_imageView_userAddContent_check_3"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:visibility="gone"/>


                <android.support.v7.widget.AppCompatImageView
                    android:layout_below="@id/pollActivity_imageView_userAddContent_3"
                    android:id="@+id/pollActivity_imageView_userAddContent_4"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />
                <android.support.v7.widget.AppCompatImageView
                    android:layout_alignBottom="@id/pollActivity_imageView_userAddContent_4"
                    android:id="@+id/pollActivity_imageView_userAddContent_check_4"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:visibility="gone"/>


                <android.support.v7.widget.AppCompatImageView
                    android:layout_below="@id/pollActivity_imageView_userAddContent_4"
                    android:id="@+id/pollActivity_imageView_userAddContent_5"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />
                <android.support.v7.widget.AppCompatImageView
                    android:layout_alignBottom="@id/pollActivity_imageView_userAddContent_5"
                    android:id="@+id/pollActivity_imageView_userAddContent_check_5"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:visibility="gone"/>


                <android.support.v7.widget.AppCompatImageView
                    android:layout_below="@id/pollActivity_imageView_userAddContent_5"
                    android:id="@+id/pollActivity_imageView_userAddContent_6"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />
                <android.support.v7.widget.AppCompatImageView
                    android:layout_alignBottom="@id/pollActivity_imageView_userAddContent_6"
                    android:id="@+id/pollActivity_imageView_userAddContent_check_6"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:visibility="gone"/>


                <android.support.v7.widget.AppCompatImageView
                    android:layout_below="@id/pollActivity_imageView_userAddContent_6"
                    android:id="@+id/pollActivity_imageView_userAddContent_7"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_alignBottom="@id/pollActivity_imageView_userAddContent_7"
                    android:id="@+id/pollActivity_imageView_userAddContent_check_7"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:visibility="gone"/>


                <android.support.v7.widget.AppCompatImageView
                    android:layout_below="@id/pollActivity_imageView_userAddContent_7"
                    android:id="@+id/pollActivity_imageView_userAddContent_8"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />
                <android.support.v7.widget.AppCompatImageView
                    android:layout_alignBottom="@id/pollActivity_imageView_userAddContent_8"
                    android:id="@+id/pollActivity_imageView_userAddContent_check_8"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:visibility="gone"/>


                <android.support.v7.widget.AppCompatImageView
                    android:layout_below="@id/pollActivity_imageView_userAddContent_8"
                    android:id="@+id/pollActivity_imageView_userAddContent_9"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_alignBottom="@id/pollActivity_imageView_userAddContent_9"
                    android:id="@+id/pollActivity_imageView_userAddContent_check_9"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:visibility="gone"/>


                <android.support.v7.widget.AppCompatImageView
                    android:layout_below="@id/pollActivity_imageView_userAddContent_9"
                    android:id="@+id/pollActivity_imageView_userAddContent_10"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />
                <android.support.v7.widget.AppCompatImageView
                    android:layout_alignBottom="@id/pollActivity_imageView_userAddContent_10"
                    android:id="@+id/pollActivity_imageView_userAddContent_check_10"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:visibility="gone"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>