<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_gravity="center">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_weight="1"
                    android:id="@+id/imageView_postImg_0"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:background="#aed1fc"
                    android:scaleType="centerCrop" />
                <android.support.v7.widget.AppCompatImageView
                    android:layout_weight="1"
                    android:id="@+id/imageView_postImg_1"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:background="#aed1fc"
                    android:scaleType="centerCrop" />
                <android.support.v7.widget.AppCompatImageView
                    android:layout_weight="1"
                    android:id="@+id/imageView_postImg_2"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:background="#aed1fc"
                    android:scaleType="centerCrop" />
                <android.support.v7.widget.AppCompatImageView
                    android:layout_weight="1"
                    android:id="@+id/imageView_postImg_3"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:background="#aed1fc"
                    android:scaleType="centerCrop" />





            <!--<ImageView-->
            <!--android:id="@+id/imageView_contentType"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_margin="15dp"-->
            <!--android:background="#ffffff"-->
            <!--android:minHeight="30dp"-->
            <!--android:minWidth="30dp"-->
            <!--android:src="@drawable/ic_access_alarm_black_24dp" />-->


        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp">


            <ImageView
                android:layout_weight="1"
                android:src="@drawable/ic_grain_black_24dp"
                android:id="@+id/imageView_contentType"
                android:layout_width="24dp"
                android:layout_height="24dp" />


            <TextView
                android:layout_weight="2"
                android:id="@+id/textView_contentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#737373"
                android:text="exec" />


            <ImageView
                android:layout_weight="1"
                android:id="@+id/imageView_like"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_favorite_border_black_24dp" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/textView_likeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#737373"
                android:text="2291" />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/imageView_hitCount"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_poll_black_24dp" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/textView_hitCount"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textColor="#737373"
                android:text="3374" />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/imageView_share"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_share_black_24dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#efefef">

        </View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp">


            <TextView
                android:id="@+id/textView_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="kjlee"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/textView_userName"
                android:textColor="#737373" />

        </RelativeLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>