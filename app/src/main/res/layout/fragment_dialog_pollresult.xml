            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:layout_weight="1"
                android:id="@+id/pollActivity_horizontalBarChart_result"
                android:layout_width="300dp"
                android:layout_height="400dp" />


            <!--<com.github.mikephil.charting.charts.HorizontalBarChart-->
